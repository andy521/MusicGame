<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="118dp"
        android:layout_height="118dp"
        android:layout_centerInParent="true"
        android:src="@drawable/level_item_bg" />

    <com.fotoable.piano.view.CircleProgressView
        android:id="@+id/progressbar"
        android:layout_width="114dp"
        android:layout_height="114dp"
        app:line_stroke_width="2dp"
        app:progress_color="@color/circle_progress_color"
        app:progress_color_bg="@color/circle_progress_bg_color"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp">
    </com.fotoable.piano.view.CircleProgressView>

    <TextView
        android:id="@+id/level_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/level_dong_num_color"
        android:textSize="@dimen/text_size_26" />

</RelativeLayout>