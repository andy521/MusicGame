<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <LinearLayout
            android:id="@+id/ad_mediaview_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ad_common_imageview_hight"
        android:layout_margin="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ad_little_icon_content"
            android:layout_width="@dimen/ad_common_imageview_hight"
            android:layout_height="@dimen/ad_common_imageview_hight"
            android:background="@drawable/ad_icon_frame" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ad_adview_title"
                style="@style/AdTitleTextView"
                android:layout_weight="1" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/ad_adview_body"
        style="@style/AdBodyTextView"
        android:layout_height="34dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        tools:text="bodybodybodybodybodybodybodybodybodybodybodybodybodybodybodybodybodybodybodybodybodybodybodybodybodybodybodybodybodybodydybodybodybodybodybodybodybodybodybodybodybod" />

    <Button
        android:id="@+id/ad_view_btn"
        style="@style/AdButtonYellow"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp" />
</LinearLayout>
