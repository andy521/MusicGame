<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="45dp"
    android:layout_marginRight="16dp"
    android:background="@color/background_ad"
    android:paddingLeft="8dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ad_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/ad_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/ad_img"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingTop="5dp"
        android:textSize="11sp" />

    <Button
        android:id="@+id/ad_act_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ad_title"
        android:layout_alignLeft="@id/ad_title"
        android:background="@drawable/bg_ad_act"
        android:layout_marginTop="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="8sp" />


    <LinearLayout
        android:id="@+id/ad_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ad_title"
        android:layout_alignTop="@id/ad_title"
        android:layout_marginRight="3dp"
        android:paddingTop="3dp">

    </LinearLayout>

</RelativeLayout>